{% extends "template.php.twig" %}

{% block content %}
    <div class="container mt-5">
        <h2 class="text-center">Create a new topic</h2><br>
        <form class="needs-validation" action="../topic" method="post">

            <div class="mb-3">
                <label for="topicName" id="topicName"><b>Enter a Topic Name:</b></label>
                <input type="text" class="form-control" name="title" placeholder="Enter Topic Name"
                       required></input><br>

                <label for="docTag"><b>DocTag Select:</b></label>
                <select class="form-control" id="docTag" name="doctag">

                    {% for doctag in doctags %}
                        <option value="{{ doctag.Id }}">{{ doctag.Title }}</option>
                    {% endfor %}

                </select>

                <br><label for="topiccontent"><b>Topic Content:</b></label>
                <textarea class="form-control" id="topiccontent" rows="3" name="tcontent"
                          placeholder="Enter Topic Content"></textarea>

                <br>
                <button class="btn btn-dark" onclick="history.go(-1);"> &#8592; Back</button>
                <input type="submit" class="btn btn-primary float-right" value="Submit &#8594;">
            </div>
        </form>
    </div>

{% endblock %}
